# Server Configuration
PORT=8080
NODE_ENV=development
TIMEZONE=Asia/Jakarta

# Session Secret (Generate using: npm run init-secret)
SESSION_SECRET=your-super-secret-key-here-change-this

# Database
DB_PATH=./storage/database/floopystream.db

# Storage Paths
UPLOAD_DIR=./storage/uploads
MEDIA_DIR=./storage/media
THUMBNAIL_DIR=./storage/thumbnails
TEMP_DIR=./storage/temp
LOG_DIR=./storage/logs

# Media Processing
MAX_FILE_SIZE=5368709120
ALLOWED_FORMATS=mp4,avi,mov,mkv,flv,wmv,webm

# Google Drive (Optional)
GOOGLE_DRIVE_ENABLED=false
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=
GOOGLE_REFRESH_TOKEN=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Broadcasting
MAX_CONCURRENT_BROADCASTS=5
BROADCAST_TIMEOUT=43200000

# Application
APP_NAME=FloopyStream
APP_URL=http://localhost:8080
