<% if (contentList.length > 0) { %>
<!-- Pagination -->
<div class="mt-8 space-y-4">
  <div class="flex items-center justify-center gap-2 flex-wrap">
    <!-- Previous Button -->
    <button
      onclick="goToGalleryPage(Math.max(1, currentGalleryPage - 1))"
      class="w-8 h-8 flex items-center justify-center bg-gray-800 hover:bg-gray-700 rounded transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
      id="galleryPrevBtn"
    >
      <i class="ti ti-chevron-left"></i>
    </button>

    <!-- Page Numbers -->
    <div id="galleryPaginationNumbers" class="flex items-center gap-2">
      <!-- Page numbers will be generated by JavaScript -->
    </div>

    <!-- Next Button -->
    <button
      onclick="goToGalleryPage(Math.min(totalGalleryPages, currentGalleryPage + 1))"
      class="w-8 h-8 flex items-center justify-center bg-gray-800 hover:bg-gray-700 rounded transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
      id="galleryNextBtn"
    >
      <i class="ti ti-chevron-right"></i>
    </button>
  </div>

  <!-- Info Text -->
  <p class="text-center text-sm text-gray-400" id="galleryShowingInfo">
    <!-- Pagination info will be shown here -->
  </p>
</div>
<% } %>
