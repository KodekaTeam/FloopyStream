<% layout('dashboard/layout') %>

<div class="flex h-screen bg-gray-900 overflow-hidden">
  <%- include('../../partials/navbar') %> <%- include('../../partials/sidebar')
  %>

  <!-- Main Content -->
  <main class="flex-1 overflow-auto lg:ml-20 pt-16 pb-20 lg:pb-8">
    <div class="p-4 sm:p-6 lg:p-8 max-w-7xl mx-auto">
      <!-- Header -->
      <div class="mb-6 sm:mb-8">
        <h2 class="text-2xl sm:text-3xl font-bold text-white">Settings</h2>
        <p class="text-gray-400 mt-1 text-sm sm:text-base">
          Manage your account settings and preferences
        </p>
      </div>

      <!-- Grid Layout: Account Info (Left) + Tabs (Right) -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <%- include('./partials/account-info') %>

        <!-- RIGHT COLUMN: Tab Pills Content -->
        <div class="lg:col-span-2">
          <%- include('./partials/tab-pills') %> <%-
          include('./partials/profile-tab') %> <%-
          include('./partials/security-tab') %>
        </div>
      </div>
    </div>
  </main>
</div>

<%- include('./partials/scripts') %>
